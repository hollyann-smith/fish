<div class="card-container">
<div class="card text-center border-dark" style="width: 42rem;" id="<%= dom_id catch %>">

<div class="card-header"><h1><%= catch.species %></h1></div>
  <div class="card-body">
      <p class="card-text"><strong>Weather Conditions:</strong> <%= catch.weather %></p>
        <p class="card-text"><strong>Date:</strong> <%= catch.date.strftime("%m/%d/%Y") %></p>
    <p class="card-text"><strong>Bait:</strong> <%= catch.bait %></p>
    <% if catch.notes.present? %>
      <p class="card-text"><strong>Notes:</strong> <%= catch.notes %></p>
    <% end %>
<%= image_tag url_for(catch.photo), class: "img-fluid rounded-top", style: "width: 450px; object-fit: cover;" if catch.photo.attached?  %>
<br/><br/>
  <% unless controller_name == "catches" && action_name == "edit" %>
  <%= link_to "Edit", edit_catch_path(catch), class: "btn btn-custom" %>
<% end %>

  </div>
  <div>
<%= button_to @catch, method: :delete, class: "btn btn-danger" do %>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
  </svg>
<% end %>
</div>
</br>
</div>
</div>
